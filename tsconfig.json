{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@/*": ["src/*"],
      "@repo/*": ["../../packages/*/src"]
    }
  },
  "types": ["vitest/globals", "node"],
  "include": ["src/**/*", "**/*.config.ts", "**/*.setup.ts"]
}
